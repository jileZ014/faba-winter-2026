    <!-- Firebase Scripts -->
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-auth-compat.js"></script>

    <script>
        // Firebase Configuration
        const firebaseConfig = {
    apiKey: "AIzaSyCRo89Z-QYHHDWAjL60nyQ9otRju0m3NrI",
    authDomain: "az-flight-fall-2025.firebaseapp.com",
    projectId: "az-flight-fall-2025",
    storageBucket: "az-flight-fall-2025.firebasestorage.app",
    messagingSenderId: "1095331867257",
    appId: "1:1095331867257:web:795836818d076851fc02a8"
};
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        // Game State
        let currentGame = {
            id: null,
            homeTeam: {
                id: null,
                name: 'Home Team',
                players: [],
                fouls: 0
            },
            awayTeam: {
                id: null,
                name: 'Away Team',
                players: [],
                fouls: 0
            },
            period: 'Q1',
            startTime: null
        };

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadGameFromURL();
            setupRealtimeListeners();
        });

        // Load game from URL parameters
        function loadGameFromURL() {
            const urlParams = new URLSearchParams(window.location.search);
            const gameId = urlParams.get('gameId');
            
            if (gameId) {
                loadGame(gameId);
            } else {
                // Load today's games for selection
                loadTodaysGames();
            }
        }

        // Load specific game
        async function loadGame(gameId) {
            try {
                const gameDoc = await db.collection('games').doc(gameId).get();
                if (gameDoc.exists) {
                    const gameData = gameDoc.data();
                    currentGame.id = gameId;
                    
                    // Load teams
                    await loadTeam(gameData.homeTeamId, 'home');
                    await loadTeam(gameData.awayTeamId, 'away');
                    
                    // Update display
                    updateGameDisplay();
                    showToast('Game loaded successfully!');
                }
            } catch (error) {
                console.error('Error loading game:', error);
                showToast('Error loading game', 'error');
            }
        }

        // Load team and players
        async function loadTeam(teamId, side) {
            try {
                const teamDoc = await db.collection('teams').doc(teamId).get();
                if (teamDoc.exists) {
                    const teamData = teamDoc.data();
                    const team = side === 'home' ? currentGame.homeTeam : currentGame.awayTeam;
                    
                    team.id = teamId;
                    team.name = teamData.name;
                    
                    // Load players
                    const playersSnapshot = await db.collection('players')
                        .where('teamId', '==', teamId)
                        .get();
                    
                    team.players = [];
                    playersSnapshot.forEach(doc => {
                        const playerData = doc.data();
                        team.players.push({
                            id: doc.id,
                            name: playerData.name,
                            number: playerData.jerseyNumber || 0,
                            stats: {
                                pts: 0,
                                reb: 0,
                                ast: 0,
                                stl: 0,
                                blk: 0,
                                fls: 0
                            }
                        });
                    });
                }
            } catch (error) {
                console.error('Error loading team:', error);
            }
        }

        // Setup real-time listeners
        function setupRealtimeListeners() {
            if (!currentGame.id) return;
            
            // Listen for player additions
            if (currentGame.homeTeam.id) {
                db.collection('players')
                    .where('teamId', '==', currentGame.homeTeam.id)
                    .onSnapshot(snapshot => {
                        snapshot.docChanges().forEach(change => {
                            if (change.type === 'added') {
                                const playerExists = currentGame.homeTeam.players.find(p => p.id === change.doc.id);
                                if (!playerExists) {
                                    const playerData = change.doc.data();
                                    currentGame.homeTeam.players.push({
                                        id: change.doc.id,
                                        name: playerData.name,
                                        number: playerData.jerseyNumber || 0,
                                        stats: { pts: 0, reb: 0, ast: 0, stl: 0, blk: 0, fls: 0 }
                                    });
                                    updateTeamDisplay('home');
                                    showToast(`Player ${playerData.name} added to roster`);
                                }
                            }
                        });
                    });
            }
            
            if (currentGame.awayTeam.id) {
                db.collection('players')
                    .where('teamId', '==', currentGame.awayTeam.id)
                    .onSnapshot(snapshot => {
                        snapshot.docChanges().forEach(change => {
                            if (change.type === 'added') {
                                const playerExists = currentGame.awayTeam.players.find(p => p.id === change.doc.id);
                                if (!playerExists) {
                                    const playerData = change.doc.data();
                                    currentGame.awayTeam.players.push({
                                        id: change.doc.id,
                                        name: playerData.name,
                                        number: playerData.jerseyNumber || 0,
                                        stats: { pts: 0, reb: 0, ast: 0, stl: 0, blk: 0, fls: 0 }
                                    });
                                    updateTeamDisplay('away');
                                    showToast(`Player ${playerData.name} added to roster`);
                                }
                            }
                        });
                    });
            }
        }

        // Update game display
        function updateGameDisplay() {
            // Update team names
            document.getElementById('homeTeamName').textContent = currentGame.homeTeam.name;
            document.getElementById('awayTeamName').textContent = currentGame.awayTeam.name;
            document.getElementById('gameTeams').textContent = 
                `${currentGame.homeTeam.name} vs ${currentGame.awayTeam.name}`;
            
            // Update scores
            updateScores();
            
            // Update team displays
            updateTeamDisplay('home');
            updateTeamDisplay('away');
        }

        // Update scores
        function updateScores() {
            const homeScore = currentGame.homeTeam.players.reduce((sum, p) => sum + p.stats.pts, 0);
            const awayScore = currentGame.awayTeam.players.reduce((sum, p) => sum + p.stats.pts, 0);
            
            document.getElementById('homeScore').textContent = homeScore;
            document.getElementById('awayScore').textContent = awayScore;
            
            // Update team fouls
            const homeFouls = currentGame.homeTeam.players.reduce((sum, p) => sum + p.stats.fls, 0);
            const awayFouls = currentGame.awayTeam.players.reduce((sum, p) => sum + p.stats.fls, 0);
            
            document.getElementById('homeTeamFouls').textContent = homeFouls;
            document.getElementById('awayTeamFouls').textContent = awayFouls;
        }

        // Update team display
        function updateTeamDisplay(side) {
            const team = side === 'home' ? currentGame.homeTeam : currentGame.awayTeam;
            const container = document.getElementById(side + 'Players');
            
            container.innerHTML = team.players.map(player => {
                const foulClass = player.stats.fls >= 6 ? 'fouled-out' : 
                                player.stats.fls >= 5 ? 'warning' : '';
                const foulStatus = player.stats.fls >= 6 ? 'FOULED OUT' : 
                                 player.stats.fls >= 5 ? '5 FOULS' : '';
                
                return `
                    <div class="player-card ${foulClass}">
                        <div class="player-info">
                            <div class="player-number">${player.number}</div>
                            <div class="player-name">${player.name}</div>
                            ${foulStatus ? `<div class="foul-status">${foulStatus}</div>` : ''}
                        </div>
                        
                        <div class="player-stats">
                            <!-- Points -->
                            <div class="stat-group">
                                <div class="stat-group-label">PTS</div>
                                <div class="stat-controls">
                                    <button class="stat-btn plus-three" onclick="updateStat('${player.id}', 'pts', 3)">+3</button>
                                    <button class="stat-btn plus-two" onclick="updateStat('${player.id}', 'pts', 2)">+2</button>
                                    <button class="stat-btn plus-one" onclick="updateStat('${player.id}', 'pts', 1)">+1</button>
                                    <div class="stat-value">${player.stats.pts}</div>
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'pts', -1)">-</button>
                                </div>
                            </div>
                            
                            <!-- Rebounds -->
                            <div class="stat-group">
                                <div class="stat-group-label">REB</div>
                                <div class="stat-controls">
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'reb', 1)">+</button>
                                    <div class="stat-value">${player.stats.reb}</div>
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'reb', -1)">-</button>
                                </div>
                            </div>
                            
                            <!-- Assists -->
                            <div class="stat-group">
                                <div class="stat-group-label">AST</div>
                                <div class="stat-controls">
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'ast', 1)">+</button>
                                    <div class="stat-value">${player.stats.ast}</div>
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'ast', -1)">-</button>
                                </div>
                            </div>
                            
                            <!-- Steals -->
                            <div class="stat-group">
                                <div class="stat-group-label">STL</div>
                                <div class="stat-controls">
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'stl', 1)">+</button>
                                    <div class="stat-value">${player.stats.stl}</div>
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'stl', -1)">-</button>
                                </div>
                            </div>
                            
                            <!-- Blocks -->
                            <div class="stat-group">
                                <div class="stat-group-label">BLK</div>
                                <div class="stat-controls">
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'blk', 1)">+</button>
                                    <div class="stat-value">${player.stats.blk}</div>
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'blk', -1)">-</button>
                                </div>
                            </div>
                            
                            <!-- Fouls -->
                            <div class="stat-group">
                                <div class="stat-group-label">FLS</div>
                                <div class="stat-controls">
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'fls', 1)">+</button>
                                    <div class="stat-value">${player.stats.fls}</div>
                                    <button class="stat-btn" onclick="updateStat('${player.id}', 'fls', -1)">-</button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // Update player stat
        function updateStat(playerId, statType, change) {
            // Find player in either team
            let player = currentGame.homeTeam.players.find(p => p.id === playerId);
            let team = 'home';
            
            if (!player) {
                player = currentGame.awayTeam.players.find(p => p.id === playerId);
                team = 'away';
            }
            
            if (!player) return;
            
            // Don't allow negative stats
            const newValue = Math.max(0, player.stats[statType] + change);
            player.stats[statType] = newValue;
            
            // Update display
            updateScores();
            updateTeamDisplay(team);
            
            // Save to Firebase (debounced)
            saveStatToFirebase(playerId, statType, newValue);
            
            // Show feedback
            const statName = getStatName(statType);
            if (change > 0) {
                showToast(`${player.name}: +${change} ${statName}`);
            }
        }

        // Save stat to Firebase
        let saveTimeout = null;
        function saveStatToFirebase(playerId, statType, value) {
            // Clear previous timeout
            if (saveTimeout) clearTimeout(saveTimeout);
            
            // Debounce saves by 1 second
            saveTimeout = setTimeout(async () => {
                try {
                    // Save to game stats collection
                    await db.collection('gameStats').doc(`${currentGame.id}_${playerId}`).set({
                        gameId: currentGame.id,
                        playerId: playerId,
                        [statType]: value,
                        updatedAt: firebase.firestore.FieldValue.serverTimestamp()
                    }, { merge: true });
                } catch (error) {
                    console.error('Error saving stat:', error);
                }
            }, 1000);
        }

        // Get stat name
        function getStatName(stat) {
            const names = {
                pts: 'Points',
                reb: 'Rebounds',
                ast: 'Assists',
                stl: 'Steals',
                blk: 'Blocks',
                fls: 'Fouls'
            };
            return names[stat] || stat;
        }

        // Show add player modal
        function showAddPlayerModal(team) {
            document.getElementById('playerTeam').value = team;
            document.getElementById('addPlayerModal').classList.add('show');
            document.getElementById('playerName').focus();
        }

        // Hide add player modal
        function hideAddPlayerModal() {
            document.getElementById('addPlayerModal').classList.remove('show');
            document.getElementById('addPlayerForm').reset();
        }

        // Add new player
        async function addNewPlayer(event) {
            event.preventDefault();
            
            const team = document.getElementById('playerTeam').value;
            const teamData = team === 'home' ? currentGame.homeTeam : currentGame.awayTeam;
            
            const playerData = {
                name: document.getElementById('playerName').value,
                jerseyNumber: document.getElementById('playerNumber').value,
                teamId: teamData.id,
                teamName: teamData.name,
                createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                addedDuringGame: true,
                gameId: currentGame.id
            };
            
            try {
                // Add to Firebase
                const docRef = await db.collection('players').add(playerData);
                
                // Add to local state
                const newPlayer = {
                    id: docRef.id,
                    name: playerData.name,
                    number: playerData.jerseyNumber,
                    stats: { pts: 0, reb: 0, ast: 0, stl: 0, blk: 0, fls: 0 }
                };
                
                if (team === 'home') {
                    currentGame.homeTeam.players.push(newPlayer);
                } else {
                    currentGame.awayTeam.players.push(newPlayer);
                }
                
                // Update display
                updateTeamDisplay(team);
                hideAddPlayerModal();
                showToast(`Player ${playerData.name} added successfully!`);
                
            } catch (error) {
                console.error('Error adding player:', error);
                showToast('Error adding player', 'error');
            }
        }

        // Update period
        function updatePeriod() {
            currentGame.period = document.getElementById('periodSelector').value;
            saveGame();
        }

        // Save game
        async function saveGame() {
            if (!currentGame.id) return;
            
            try {
                // Calculate totals
                const homeScore = currentGame.homeTeam.players.reduce((sum, p) => sum + p.stats.pts, 0);
                const awayScore = currentGame.awayTeam.players.reduce((sum, p) => sum + p.stats.pts, 0);
                
                // Save game state
                await db.collection('games').doc(currentGame.id).update({
                    homeScore: homeScore,
                    awayScore: awayScore,
                    period: currentGame.period,
                    status: 'in_progress',
                    updatedAt: firebase.firestore.FieldValue.serverTimestamp()
                });
                
                // Save all player stats
                for (const player of [...currentGame.homeTeam.players, ...currentGame.awayTeam.players]) {
                    await db.collection('gameStats').doc(`${currentGame.id}_${player.id}`).set({
                        gameId: currentGame.id,
                        playerId: player.id,
                        ...player.stats,
                        updatedAt: firebase.firestore.FieldValue.serverTimestamp()
                    });
                }
                
                showToast('Game saved successfully!');
                
            } catch (error) {
                console.error('Error saving game:', error);
                showToast('Error saving game', 'error');
            }
        }

        // End game
        async function endGame() {
            if (!confirm('Are you sure you want to end this game?')) return;
            
            try {
                await saveGame();
                
                // Update game status
                await db.collection('games').doc(currentGame.id).update({
                    status: 'completed',
                    endTime: firebase.firestore.FieldValue.serverTimestamp()
                });
                
                showToast('Game ended successfully!');
                setTimeout(() => {
                    window.location.href = '/';
                }, 2000);
                
            } catch (error) {
                console.error('Error ending game:', error);
                showToast('Error ending game', 'error');
            }
        }

        // Toast notification
        function showToast(message, type = 'success') {
            const toast = document.createElement('div');
            toast.className = `toast show ${type}`;
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Load today's games for selection
        async function loadTodaysGames() {
            // This would load games from Firebase for selection
            // For now, show message
            document.getElementById('gameTeams').textContent = 'Please select a game from the schedule';
        }
    </script>
<script src="/js/auth-check.js"></script>
