                        <option value="14U">14U Division</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="teamColors">Team Colors</label>
                    <input type="text" id="teamColors" placeholder="e.g., Blue and White">
                </div>
                <div class="form-group">
                    <label>Team Logo</label>
                    <div class="file-upload-area" id="logoUploadArea" onclick="document.getElementById('teamLogoFile').click()">
                        <i class="fas fa-cloud-upload-alt"></i>
                        <p>Click to upload or drag and drop</p>
                        <small>PNG, JPG up to 5MB</small>
                    </div>
                    <div class="image-preview" id="logoPreview">
                        <img id="logoPreviewImg" src="" alt="Logo preview">
                    </div>
                    <input type="file" id="teamLogoFile" accept="image/*" style="display: none;" onchange="previewLogo(event)">
                </div>
                <div class="modal-actions">
                    <button type="submit" class="btn-submit">Create Team</button>
                    <button type="button" class="btn-cancel" onclick="hideCreateTeamModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add Player Modal -->
    <div id="addPlayerModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add Player</h3>
                <button class="modal-close" onclick="hideAddPlayerModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="addPlayerForm" onsubmit="addPlayer(event)">
                <div class="form-row">
                    <div class="form-group">
                        <label for="playerName">Player Name</label>
                        <input type="text" id="playerName" required placeholder="First Last">
                    </div>
                    <div class="form-group">
                        <label for="jerseyNumber">Jersey Number</label>
                        <input type="number" id="jerseyNumber" required min="0" max="99" placeholder="00">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="playerPosition">Position</label>
                        <select id="playerPosition">
                            <option value="">Select Position</option>
                            <option value="PG">Point Guard</option>
                            <option value="SG">Shooting Guard</option>
                            <option value="SF">Small Forward</option>
                            <option value="PF">Power Forward</option>
                            <option value="C">Center</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="playerGrade">Grade</label>
                        <input type="text" id="playerGrade" placeholder="e.g., 7th">
                    </div>
                </div>
                <div class="form-group">
                    <label for="parentEmail">Parent Email</label>
                    <input type="email" id="parentEmail" placeholder="parent@email.com">
                </div>
                <div class="form-group">
                    <label>Player Photo</label>
                    <div class="file-upload-area" onclick="document.getElementById('playerPhotoFile').click()">
                        <i class="fas fa-camera"></i>
                        <p>Click to upload player photo</p>
                        <small>PNG, JPG up to 2MB</small>
                    </div>
                    <div class="image-preview" id="playerPhotoPreview">
                        <img id="playerPhotoPreviewImg" src="" alt="Player photo">
                    </div>
                    <input type="file" id="playerPhotoFile" accept="image/*" style="display: none;" onchange="previewPlayerPhoto(event)">
                </div>
                <div class="modal-actions">
                    <button type="submit" class="btn-submit">Add Player</button>
                    <button type="button" class="btn-cancel" onclick="hideAddPlayerModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Firebase Scripts -->
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-storage-compat.js"></script>

    <script>
        // Firebase Configuration
        const firebaseConfig = {
            apiKey: "AIzaSyCRo89Z-QYHHDWAjL60nyQ9otRju0m3NrI",
  authDomain: "az-flight-fall-2025.firebaseapp.com",
  projectId: "az-flight-fall-2025",
  storageBucket: "az-flight-fall-2025.firebasestorage.app",
  messagingSenderId: "1095331867257",
  appId: "1:1095331867257:web:795836818d076851fc02a8"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();
        const storage = firebase.storage();

        // State
        let currentCoach = null;
        let currentTeam = null;
        let teams = [];
        let players = [];

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadCoachData();
            setupDragAndDrop();
            setupRealtimeListeners();
        });

        // Load coach data
        async function loadCoachData() {
            // For now, we'll simulate a coach ID - in production, this would come from auth
            const coachId = localStorage.getItem('coachId') || 'coach_' + Date.now();
            localStorage.setItem('coachId', coachId);
            
            try {
                // Load coach's teams
                const teamsSnapshot = await db.collection('teams')
                    .where('coachId', '==', coachId)
                    .get();
                
                teams = [];
                const teamSelector = document.getElementById('teamSelector');
                teamSelector.innerHTML = '<option value="">Select Your Team</option>';
                
                teamsSnapshot.forEach(doc => {
                    const team = { id: doc.id, ...doc.data() };
                    teams.push(team);
                    const option = document.createElement('option');
                    option.value = team.id;
                    option.textContent = `${team.name} (${team.division})`;
                    teamSelector.appendChild(option);
                });
                
                // Add create new team option
                const newOption = document.createElement('option');
                newOption.value = 'new';
                newOption.textContent = '+ Create New Team';
                teamSelector.appendChild(newOption);
                
                // Auto-select first team if only one
                if (teams.length === 1) {
                    teamSelector.value = teams[0].id;
                    switchTeam();
                }
                
            } catch (error) {
                console.error('Error loading coach data:', error);
            }
        }

        // Switch team
        async function switchTeam() {
            const teamId = document.getElementById('teamSelector').value;
            
            if (teamId === 'new') {
                showCreateTeamModal();
                return;
            }
            
            if (!teamId) {
                // Show empty state
                document.getElementById('teamHeaderSection').style.display = 'none';
                document.getElementById('tabNav').style.display = 'none';
                document.getElementById('performanceSection').style.display = 'none';
                document.getElementById('playerSection').style.display = 'none';
                document.getElementById('emptyState').style.display = 'block';
                return;
            }
            
            // Hide empty state, show team content
            document.getElementById('emptyState').style.display = 'none';
            document.getElementById('teamHeaderSection').style.display = 'flex';
            document.getElementById('tabNav').style.display = 'flex';
            document.getElementById('performanceSection').style.display = 'block';
            document.getElementById('playerSection').style.display = 'block';
            
            // Load team data
            currentTeam = teams.find(t => t.id === teamId);
            if (currentTeam) {
                updateTeamDisplay();
                loadPlayers();
                loadSchedule();
                loadStats();
            }
        }

        // Update team display
        function updateTeamDisplay() {
            document.getElementById('teamNameDisplay').textContent = currentTeam.name;
            document.getElementById('teamDivisionDisplay').textContent = currentTeam.division;
            document.getElementById('teamRecordDisplay').textContent = `${currentTeam.wins || 0}-${currentTeam.losses || 0}`;
            document.getElementById('teamWins').textContent = currentTeam.wins || 0;
            document.getElementById('teamLosses').textContent = currentTeam.losses || 0;
            
            // Load team logo if exists
            if (currentTeam.logoUrl) {
                document.getElementById('teamLogoDisplay').innerHTML = 
                    `<img src="${currentTeam.logoUrl}" alt="Team logo">`;
            } else {
                document.getElementById('teamLogoDisplay').innerHTML = 
                    '<i class="fas fa-shield-alt"></i>';
            }
        }

        // Load players
        async function loadPlayers() {
            if (!currentTeam) return;
            
            try {
                const playersSnapshot = await db.collection('players')
                    .where('teamId', '==', currentTeam.id)
                    .get();
                
                players = [];
                const tbody = document.getElementById('playersTableBody');
                tbody.innerHTML = '';
                
                playersSnapshot.forEach(doc => {
                    const player = { id: doc.id, ...doc.data() };
                    players.push(player);
                    
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td class="player-photo-cell">
                            <div class="player-photo" onclick="uploadPlayerPhoto('${player.id}')">
                                ${player.photoUrl ? 
                                    `<img src="${player.photoUrl}" alt="${player.name}">` : 
                                    '<i class="fas fa-user"></i>'}
                                <div class="photo-upload-overlay">
                                    <i class="fas fa-camera"></i>
                                </div>
                            </div>
                        </td>
                        <td><strong>${player.jerseyNumber || '-'}</strong></td>
                        <td>${player.name}</td>
                        <td>${player.position || '-'}</td>
                        <td>${player.grade || '-'}</td>
                        <td>
                            <div class="player-actions">
                                <button class="btn-icon btn-edit" onclick="editPlayer('${player.id}')">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn-icon btn-delete" onclick="deletePlayer('${player.id}')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
                
                // Update player count
                document.getElementById('teamPlayerCountDisplay').textContent = `${players.length} Players`;
                
            } catch (error) {
                console.error('Error loading players:', error);
            }
        }

        // Setup real-time listeners
        function setupRealtimeListeners() {
            // Listen for players added by scorekeeper
            db.collection('players').onSnapshot(snapshot => {
                snapshot.docChanges().forEach(change => {
                    if (change.type === 'added' && currentTeam) {
                        const playerData = change.doc.data();
                        if (playerData.teamId === currentTeam.id && playerData.addedDuringGame) {
                            // Refresh players list
                            loadPlayers();
                            showToast(`New player ${playerData.name} added during game`);
                        }
                    }
                });
            });
        }

        // Create team
        async function createTeam(event) {
            event.preventDefault();
            
            const coachId = localStorage.getItem('coachId');
            const teamData = {
                name: document.getElementById('teamName').value,
                division: document.getElementById('teamDivision').value,
                colors: document.getElementById('teamColors').value,
                coachId: coachId,
                wins: 0,
                losses: 0,
                createdAt: firebase.firestore.FieldValue.serverTimestamp()
            };
            
            try {
                // Upload logo if selected
                const logoFile = document.getElementById('teamLogoFile').files[0];
                if (logoFile) {
                    const logoUrl = await uploadImage(logoFile, 'team-logos');
                    teamData.logoUrl = logoUrl;
                }
                
                // Create team in Firestore
                const docRef = await db.collection('teams').add(teamData);
                
                showToast('Team created successfully!');
                hideCreateTeamModal();
                
                // Reload teams and select new team
                await loadCoachData();
                document.getElementById('teamSelector').value = docRef.id;
                switchTeam();
                
            } catch (error) {
                console.error('Error creating team:', error);
                showToast('Error creating team', 'error');
            }
        }

        // Add player
        async function addPlayer(event) {
            event.preventDefault();
            
            if (!currentTeam) return;
            
            const playerData = {
                name: document.getElementById('playerName').value,
                jerseyNumber: document.getElementById('jerseyNumber').value,
                position: document.getElementById('playerPosition').value,
                grade: document.getElementById('playerGrade').value,
                parentEmail: document.getElementById('parentEmail').value,
                teamId: currentTeam.id,
                teamName: currentTeam.name,
                createdAt: firebase.firestore.FieldValue.serverTimestamp()
            };
            
            try {
                // Upload photo if selected
                const photoFile = document.getElementById('playerPhotoFile').files[0];
                if (photoFile) {
                    const photoUrl = await uploadImage(photoFile, 'player-photos');
                    playerData.photoUrl = photoUrl;
                }
                
                // Add player to Firestore
                await db.collection('players').add(playerData);
                
                showToast('Player added successfully!');
                hideAddPlayerModal();
                loadPlayers();
                
            } catch (error) {
                console.error('Error adding player:', error);
                showToast('Error adding player', 'error');
            }
        }

        // Upload image to Firebase Storage
        async function uploadImage(file, folder) {
            const timestamp = Date.now();
            const fileName = `${timestamp}_${file.name}`;
            const storageRef = storage.ref(`${folder}/${fileName}`);
            
            const snapshot = await storageRef.put(file);
            const downloadUrl = await snapshot.ref.getDownloadURL();
            
            return downloadUrl;
        }

        // Handle team logo upload
        async function handleTeamLogoUpload(event) {
            const file = event.target.files[0];
            if (!file || !currentTeam) return;
            
            try {
                showToast('Uploading logo...');
                const logoUrl = await uploadImage(file, 'team-logos');
                
                // Update team in Firestore
                await db.collection('teams').doc(currentTeam.id).update({ logoUrl });
                
                // Update display
                document.getElementById('teamLogoDisplay').innerHTML = 
                    `<img src="${logoUrl}" alt="Team logo">`;
                
                currentTeam.logoUrl = logoUrl;
                showToast('Logo uploaded successfully!');
                
            } catch (error) {
                console.error('Error uploading logo:', error);
                showToast('Error uploading logo', 'error');
            }
        }

        // Upload player photo
        async function uploadPlayerPhoto(playerId) {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            
            input.onchange = async (event) => {
                const file = event.target.files[0];
                if (!file) return;
                
                try {
                    showToast('Uploading photo...');
                    const photoUrl = await uploadImage(file, 'player-photos');
                    
                    // Update player in Firestore
                    await db.collection('players').doc(playerId).update({ photoUrl });
                    
                    showToast('Photo uploaded successfully!');
                    loadPlayers();
                    
                } catch (error) {
                    console.error('Error uploading photo:', error);
                    showToast('Error uploading photo', 'error');
                }
            };
            
            input.click();
        }

        // Delete player
        async function deletePlayer(playerId) {
            if (!confirm('Are you sure you want to remove this player?')) return;
            
            try {
                await db.collection('players').doc(playerId).delete();
                showToast('Player removed successfully!');
                loadPlayers();
            } catch (error) {
                console.error('Error deleting player:', error);
                showToast('Error deleting player', 'error');
            }
        }

        // Preview logo
        function previewLogo(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('logoPreviewImg').src = e.target.result;
                    document.getElementById('logoPreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }

        // Preview player photo
        function previewPlayerPhoto(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('playerPhotoPreviewImg').src = e.target.result;
                    document.getElementById('playerPhotoPreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }

        // Switch tab
        function switchTab(tabName) {
            // Update tab buttons
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // Update tab content
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            document.getElementById(tabName + 'Tab').classList.add('active');
        }

        // Load schedule
        async function loadSchedule() {
            if (!currentTeam) return;
            
            try {
                const gamesSnapshot = await db.collection('games')
                    .where('homeTeamId', '==', currentTeam.id)
                    .get();
                
                const awayGamesSnapshot = await db.collection('games')
                    .where('awayTeamId', '==', currentTeam.id)
                    .get();
                
                const scheduleList = document.getElementById('scheduleList');
                scheduleList.innerHTML = '';
                
                const allGames = [];
                gamesSnapshot.forEach(doc => allGames.push({ id: doc.id, ...doc.data() }));
                awayGamesSnapshot.forEach(doc => allGames.push({ id: doc.id, ...doc.data() }));
                
                allGames.forEach(game => {
                    const gameCard = document.createElement('div');
                    gameCard.className = 'game-card';
                    gameCard.innerHTML = `
                        <div class="game-info">
                            <div class="game-teams">${game.homeTeamName} vs ${game.awayTeamName}</div>
                            <div class="game-details">
                                <span><i class="fas fa-calendar"></i> ${game.gameDate || 'TBD'}</span>
                                <span><i class="fas fa-map-marker-alt"></i> ${game.location || 'TBD'}</span>
                            </div>
                        </div>
                        <div class="game-status status-${game.status || 'upcoming'}">
                            ${game.status === 'completed' ? 'Completed' : 'Upcoming'}
                        </div>
                    `;
                    scheduleList.appendChild(gameCard);
                });
                
                if (allGames.length === 0) {
                    scheduleList.innerHTML = '<p style="text-align: center; color: var(--text-secondary);">No games scheduled</p>';
                }
                
            } catch (error) {
                console.error('Error loading schedule:', error);
            }
        }

        // Load stats
        async function loadStats() {
            if (!currentTeam) return;
            
            // This would load actual stats from games
            // For now, show placeholder
            const tbody = document.getElementById('statsTableBody');
            tbody.innerHTML = players.map(player => `
                <tr>
                    <td>${player.name}</td>
                    <td>0</td>
                    <td>0</td>
                    <td>0</td>
                    <td>0</td>
                    <td>0</td>
                    <td>0</td>
                </tr>
            `).join('');
        }

        // Setup drag and drop
        function setupDragAndDrop() {
            const logoArea = document.getElementById('logoUploadArea');
            if (logoArea) {
                logoArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    logoArea.classList.add('drag-over');
                });
                
                logoArea.addEventListener('dragleave', () => {
                    logoArea.classList.remove('drag-over');
                });
                
                logoArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    logoArea.classList.remove('drag-over');
                    
                    const files = e.dataTransfer.files;
                    if (files.length > 0) {
                        document.getElementById('teamLogoFile').files = files;
                        previewLogo({ target: { files } });
                    }
                });
            }
        }

        // Modal functions
        function showCreateTeamModal() {
            document.getElementById('createTeamModal').classList.add('show');
        }

        function hideCreateTeamModal() {
            document.getElementById('createTeamModal').classList.remove('show');
            document.getElementById('createTeamForm').reset();
            document.getElementById('logoPreview').style.display = 'none';
        }

        function showAddPlayerModal() {
            document.getElementById('addPlayerModal').classList.add('show');
        }

        function hideAddPlayerModal() {
            document.getElementById('addPlayerModal').classList.remove('show');
            document.getElementById('addPlayerForm').reset();
            document.getElementById('playerPhotoPreview').style.display = 'none';
        }

        // Toast notification
        function showToast(message, type = 'success') {
            const toast = document.createElement('div');
            toast.className = `toast show ${type}`;
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Edit player (placeholder)
        function editPlayer(playerId) {
            showToast('Edit player feature coming soon');
        }
    </script>
